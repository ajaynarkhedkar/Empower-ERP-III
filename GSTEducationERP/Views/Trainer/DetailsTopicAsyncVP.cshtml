                <thead>
                    <tr>
                        <th hidden>
                            @Html.DisplayNameFor(model => model.SectionId)
                        </th>
                        <th hidden>
                            @Html.DisplayNameFor(model => model.TopicId)
                        </th>
                        <th>
                            Course Name
                        </th>
                        <th>
                            Section Name
                        </th>
                        <th>
