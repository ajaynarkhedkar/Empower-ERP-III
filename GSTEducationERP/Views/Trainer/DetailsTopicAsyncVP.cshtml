                        </th>
                        <th>
                            No Of Session
                        </th>
                        <th>
                            Duration
                        </th>
                        <th>
                            description
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            ACTION
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstTopicGRid)
                    {
                        <tr>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.SectionId)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.TopicId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SectionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TopicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoOfSessions)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TopicDescription)
                            </td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                                @if (item.Status == "Inactive")
                                {
                                    <span class="badge bg-gradient-primary">@Html.DisplayFor(modelItem => item.Status)</span>
                                }

                            </td>
                            <td>
                                <a href="@Url.Action("DetailsAssignmentsAsyncVP", "Trainer", new { id = item.TopicId })" class="icon view-assignment" title="VIEW ASSIGNMENT">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/view.mp4" type="video/mp4">
                                    </video>
                                </a>
                                @*<a href="@Url.Action("UpdateTopicAsyncVP", "Trainer", new { id = item.TopicId })" class="icon" title="EDIT">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/Edit Details.mp4" type="video/mp4">
                                    </video>
                                </a>*@
                                <a href="#" class="sectionEditLink" data-id="@item.TopicId" data-url="@Url.Action("UpdateTopicAsyncVP", "Trainer", new { id = item.TopicId })" data-toggle="modal" data-target="#SectionModal" title="EDIT">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/Edit Details.mp4" type="video/mp4">
                                    </video>
                                </a>
                                <a href="#" class="delete-button" data-id="@item.TopicId" title="DELETE">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/Delete 2.mp4" type="video/mp4">
                                    </video>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="TopicModal" tabindex="-1" role="dialog" aria-labelledby="TopicModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="TopicModalLabel">Update Topic</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <a class="back-button" onclick="goBack()">
            <video width="35" height="35" playsinline loop>
                <source src="~/Content/Admin/icon/back.mp4" type="video/mp4">
            </video>
        </a>
    </div>
    <div class="card" style="width:70%; margin-left:10px;">
        <div id="topic">

        </div>
    </div>
