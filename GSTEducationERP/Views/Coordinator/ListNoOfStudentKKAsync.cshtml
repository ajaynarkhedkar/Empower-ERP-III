@model GSTEducationERPLibrary.Coordinator.Coordinator

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Student List</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional: Add your own styles here -->
    <style>
        body {
            padding: 20px;
        }

        #DemoList {
            margin-top: 20px;
        }

        h2 {
            text-align: center;
        }

        .student-card {
            margin: 10px;
        }
        .scrollable-container {
            max-height: 400px; /* Set the maximum height for the container */
            overflow-y: auto; /* Enable vertical scrollbar */
        }
    </style>
</head>

<body>

    <div class="container-fluid">
        <br />
        <div class="card pl-6 mx-auto col-md-12">
            <div class="form-horizontal">
                <button class="close text-danger" data-dismiss="modal" style="position: absolute; top: 8px; right: 8px;">&times;</button>
                <h2>Student List</h2>
                <hr />

                <div class="scrollable-container">
                    @foreach (var item in Model.lstNoofstudent)
                    {
                        <div class="card student-card">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.StudentName)</h5>
                                <p class="card-text">
                                    <strong>Student Code:</strong> @Html.DisplayFor(modelItem => item.StudentCode)<br />
                                    <strong>Contact Number:</strong> @Html.DisplayFor(modelItem => item.ContactNumber)<br />
                                    <strong>Email:</strong> @Html.DisplayFor(modelItem => item.Emailid)
                                </p>
                            </div>
                        </div>

                    }
                    </div>
                </div>
            </div>
         </div>
    

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
