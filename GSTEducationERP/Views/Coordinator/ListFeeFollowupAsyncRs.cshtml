                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseFee)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingFee)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duration)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InstallmentAmount)
                                </td>

                                <td>
                                    @*@Html.DisplayFor(modelItem => item.AddFollowup)*@


                                    <a href="#" class="AddFees" data-id="@item.StudentId" data-action="@Url.Action("AddFeeFollowUpDetailsAsyncRS", "Coordinator", new { StudentId = item.StudentId })"
                                       data-toggle="modal" data-target="#PerformanceModal" title="Add performance">
                                        <video width="25" height="25" playsinline loop>
                                                <source src="~/Content/Admin/icon/add.mp4" type="video/mp4" />                                      

                                        </video>
                                    </a>
                                    <a href="#" class="ViewFees" data-id="@item.StudentId" data-action="@Url.Action("ViewFeeFollowupDetailsAsyncRs", "Coordinator", new { StudentId = item.StudentId })"
                                       data-toggle="modal" data-target="#PerformanceModal" title="View performance">
