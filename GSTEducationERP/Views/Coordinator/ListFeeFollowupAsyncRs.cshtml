                                </td>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.StudentCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emailid)
                                </td>
