        });</script>
    <script>
        $(document).ready(function () {
            $('#example1').on('click', '.delete-button', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Delete Assig sedule',
                    text: 'Are you sure you want to delete this Assig sedule?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'No, cancel!',
                }).then(function (result) {
                    if (result.value) {
                        $.ajax({
                            url: '/Trainer/TrainerAssingSeduleDelete/' + id,
                            type: 'POST',
                            success: function (data) {
                                if (data.success) {
                                    Swal.fire({
                                        title: 'Deleted!',
                                        text: data.message,
                                        icon: 'success'
                                    }).then(function () {
                                        // Optionally, you can redirect or reload the page
                                        location.reload();
                                    });
                                } else {
                                    Swal.fire('Error', data.message, 'error');
                                }
                            }
                        });
                    }
                });
            });
            $('.delete-button').mouseenter(function () {
                // Select the video element inside the link and play it
                $(this).find('video')[0].play();
                $(this).addClass('running');
            });

            $('.delete-button').mouseleave(function () {
                // Select the video element inside the link and pause it
                var video = $(this).find('video')[0];
                video.pause();
                video.currentTime = 0; // Reset the video to the beginning
                $(this).removeClass('running');
            });
        });
    </script>
    <script>
    $(document).ready(function () {
        $('#openModalBtn').click(function () {
            $.get('@Url.Action("RegisterAssignScheduleAsyncVP", "Trainer")', function (data) {
                // Assuming you have a modal with id 'myModal' to display the partial view
                $('#myModal .modal-body').html(data);
                $('#myModal').modal('show');
            });
        });
        $('#example1').on('click', '.edit-button', function (e) {
            e.preventDefault();

            var url = $(this).attr('href');

            $.get(url, function (data) {
                $('#myModal .modal-body').html(data);
                $('#myModal').modal('show');
            });
        });

    });
    </script>

</body>
</html>

