<body style="margin: 0; padding: 0;">
    <br />
    <div class="card " style="padding:5px;margin-right:20px;margin-left:10px; margin-top:-15px">
        <h2>Assign Schedule List</h2>
        <div class="add-buttons" style="margin-top:-20px">
            <button class="btn btn-custom" style="font-weight:bold; float:right" id="openModalBtn">
                <img src="~/Content/Admin/img/add-button.png" title="Add Assign Schedule" alt="view" height="30" width="30" /> Assign Schedule
            </button>
        </div>
        <div class="card-body" style="margin-top:-10px;">
            <table id="example1" class="table table-bordered">
                <thead>
                    <tr>
                        <th hidden>
                            @Html.DisplayNameFor(model => model.AssignScheduleId)
                        </th>
                        <th>
                            Course Name
                        </th>

                        <th>
                            Batch Name
                        </th>
                        <th>
                            Section Name
                        </th>
                        <th>
                            Topic Name
                        </th>
                        <th>
                            Lab Name
                        </th>
                        <th>
                            Duration
                        </th>
                        <th>
                            Start Date
                        </th>
                        <th>
                            End Date
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstAssingseduleGRid)
                    {
                        <tr>
                            <th hidden>
                                @Html.DisplayNameFor(model => model.AssignScheduleId)
                            </th>
                            <td>
                                @Html.DisplayFor(modelItem => item.CourseName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BatchName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SectionName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TopicName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LabName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duration)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.STARTDATEA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ENDDATEA)
                            </td>
                            <td>
                                @if (item.Status == "Completed")
                                {
                                    <span class="badge bg-success">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                                @if (item.Status == "Ongoing")
                                {
                                    <span class="badge bg-gradient-primary">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                                @if (item.Status == "Assigned")
                                {
                                    <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Status)</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("UpdateAssingSeduleAsyncVP", "Trainer", new { id = item.AssignScheduleId })" class="edit-button" title="EDIT">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/Edit Details.mp4" type="video/mp4">
                                    </video>
                                </a>
                                <a href="#" class="delete-button" data-id="@item.AssignScheduleId" title="DELETE">
                                    <video width="25" height="25" playsinline loop>
                                        <source src="~/Content/Admin/icon/Delete 2.mp4" type="video/mp4">
                                    </video>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Assign Schedule</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Partial view content will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/plugins/jquery/jquery.min.js" type="text/javascript"></script>
    <!-- Bootstrap 4 -->
