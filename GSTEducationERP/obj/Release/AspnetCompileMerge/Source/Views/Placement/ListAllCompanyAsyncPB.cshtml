                            '<source src="/Content/Admin/icon/Edit Details.mp4" type="video/mp4" title="Edit Company"></source>' +
                            '</video></a>' +

                            '<a onclick="ShowViewModel(\'' + result[i]["CompanyCode"] + '\')" data-toggle="modal" data-target="#SectionModal" class="icon">' +
