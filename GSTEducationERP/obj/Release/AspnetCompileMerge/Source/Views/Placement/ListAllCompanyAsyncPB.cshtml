                    $("#company").html(v);
                },
            });

            // Second AJAX call
            $.ajax({
                url: "/Placement/FilterDataCompanyOnInduastryIdPB",
                type: 'Post',
                data: {
                    Induastry: Induastry
                },
                success: function (response) {
                    var result = JSON.parse(response);
                    AppendData1(result);
                },
                error: function (xhr, textStatus, errorThrown) {
                }
            });
        });
        });
        function AppendData1(result) {
