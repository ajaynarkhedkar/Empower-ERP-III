@model GSTEducationERPLibrary.Trainer.Trainer

@{
    ViewBag.Title = "ListPendingTestAsyncTs";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    // Layout = "~/Views/Shared/_LayoutTrainer.cshtml";
}



<table id="example2" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignTestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatchName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LabName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTime)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.TopicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.TotalMarks)
            </th>

            <th hidden>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th hidden>
                @Html.DisplayNameFor(model => model.BatchCode)

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PendingTestList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignTestId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabName)
                </td>
                <td>
                    @item.TestDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.TestTime.ToString("HH:mm")
                    @*@Html.DisplayFor(modelItem => item.TestTime)*@
                </td>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.TopicName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TotalMarks)
                </td>

                <td hidden>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td hidden>
                    @Html.DisplayFor(modelItem => item.BatchCode)
                </td>



                <td>


                    <a href="#" class="sectionEditLink" data-id="@item.AssignTestId"
                       data-url="@Url.Action("ViewPendingTSAsynch", "Trainer", new { id = item.AssignTestId } )"
                       data-toggle="modal" data-target="#SectionModal">
                        <video width="35" height="35" playsinline loop><source src="~/Content/Admin/icon/view.mp4" type="video/mp4" /></video>
                    </a>

                    @*@Html.ActionLink("ViewPendingTSAsynch", "ViewPendingTSAsynch", new { id = item.AssignTestId })*@

                </td>
              </tr>
            
        }
    </tbody>


</table>
<div class="modal fade" id="SectionModal">
    <div class="modal-dialog" style="background-color: white;max-width:auto">
        <div class="modal-content" style="background-color: white;">

            <button class="close text-danger" data-dismiss="modal" style="position: absolute; top: 8px; right: 6px;">&times;</button>
            <div class="modal-body">
                <!-- Content will be loaded dynamically here -->
            </div>
        </div>
    </div>
</div>

