@model GSTEducationERPLibrary.Trainer.Trainer
<html>
<head>
</head>
<body style="margin: 0; padding: 0;">
    <br />
    <div class="card " style="padding: 10px;">
        <div style="display: flex; justify-content: space-between;">
            <h2>Batch List</h2>
            <div class="col-2" style="align-self: flex-end;">
                <video id="videoElement" src="~/Content/Admin/icon/add-file.mp4" alt="Image Description" style="width: 35px; height: 35px;" onclick="location.href='@Url.Action("AddAttendanceAsyncYT", "Trainer")' " title="Mark Attendance" />
            </div>
        </div>
        <hr />
        <div class="card">
            <div class="card-body">
                <table id="AttTopic" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th hidden="hidden">
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CourseName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BatchName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BatchTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalStudents)
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.lstAttendanceTopic.Count; i++)
                        {
                            var item = Model.lstAttendanceTopic[i];
                            <tr>
                                <td hidden="hidden">
                                    @Html.HiddenFor(modelItem => item.BatchCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BatchTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalStudents)
                                </td>
                                <td>
                                    <a href="@Url.Action("ListAttendanceTopicStudentAsyncYT", "Trainer", new { id = @item.BatchCode })" class="icon" title="Student List">
                                        <video width="25" height="25" playsinline loop>
                                            <source src="~/Content/Admin/icon/Student%20List.mp4" type="video/mp4">
                                        </video>
                                    </a>
                                    <a href="@Url.Action("ListAttendanceTopicwiseAsyncYT", "Trainer", new { id = @item.BatchCode })" class="icon"  title="View Attendance">
                                        <video width="25" height="25" playsinline loop>
                                            <source src="~/Content/Admin/icon/Attendence.mp4" type="video/mp4">
                                        </video>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="~/Content/plugins/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/Admin/js/Icon.js"></script>
    <script>
        var video = document.getElementById('videoElement');
        video.addEventListener('mouseenter', function () {
            this.play();
        });
        video.addEventListener('mouseleave', function () {
            this.pause();
        });
    </script>
</body>
</html>