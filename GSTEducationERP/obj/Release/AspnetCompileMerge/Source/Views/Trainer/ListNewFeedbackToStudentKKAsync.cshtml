    @*------------------This script for the addfeedback for student method model popup------------------*@
    <script type="text/javascript">
        $(document).ready(function () {
            // Use event delegation on a parent element that remains constant
            $('#example1').on('click', '.icon', function () {
                var FeedbackId = $(this).data('id');
                var url = $(this).data('url');
                // Make an AJAX call to load the content of TrainerEditsection view
                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (data) {
                        // Update the modal body with the content of TrainerEditsection view
                        $('#FeedbackModal .modal-content').html(data);
                        // Show the modal
                        $('#FeedbackModal').modal('show');
                    }
                });
            });
        });

